<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent">
	<ImageView 
		android:src="@drawable/cabecalho" 
		android:id="@+id/cabecalho"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true">
	</ImageView>
	<ScrollView 
		android:layout_below="@+id/cabecalho"
		android:layout_alignLeft="@+id/cabecalho" 
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<LinearLayout 
			android:orientation="vertical" 
			android:id="@+id/linearLayout1"
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent">
			<TextView 
				android:text="Nome:" 
				android:id="@+id/txtNome"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content">
			</TextView>
			<EditText 
				android:layout_height="wrap_content" 
				android:hint="Digite o seu nome aqui"
				android:id="@+id/editNome" 
				android:layout_width="fill_parent">
			</EditText>
			<TextView 
				android:text="Email:" 
				android:id="@+id/txtEmail"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content">
			</TextView>
			<EditText 
				android:layout_height="wrap_content" 
				android:hint="Digite o seu email aqui"
				android:id="@+id/editEmail" 
				android:layout_width="fill_parent">
			</EditText>
			<TextView 
				android:text="Login:" 
				android:id="@+id/txtLogin"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content">
			</TextView>
			<EditText 
				android:layout_height="wrap_content" 
				android:hint="Digite o seu Login"
				android:id="@+id/editLogin" 
				android:layout_width="fill_parent">
			</EditText>
			<TextView 
				android:text="Senha:" 
				android:id="@+id/txtSenha"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content">
			</TextView>
			<EditText 
				android:layout_height="wrap_content" 
				android:hint="Digite a sua senha"
				android:password="true"
				android:id="@+id/editSenha" 
				android:layout_width="fill_parent">
			</EditText>
			<TextView 
				android:text="Escola:" 
				android:id="@+id/txtEscola"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content">
			</TextView>
			<EditText 
				android:layout_height="wrap_content" 
				android:hint="Digite a sua escola"
				android:id="@+id/editEscola" 
				android:layout_width="fill_parent">
			</EditText>
			<TextView 
				android:text="Sexo:" 
				android:id="@+id/txtSexo"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content">
			</TextView>
			<ToggleButton 
				android:textOn="Masculino"
				android:textOff="Feminino" 
				android:id="@+id/toggleSexo"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content">
			</ToggleButton>
			<Button 
				android:text="Salvar" 
				android:id="@+id/btnSalvar"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content">
			</Button>
		</LinearLayout>
	</ScrollView>
</RelativeLayout>
